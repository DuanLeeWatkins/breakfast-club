<%- include('partials/header') -%>
<div class="container">
  <h2>New post</h2>
</div>

<h2>Add New Breakfast</h2>

<div class="container w-80">
  <div class="mt-5 form-group">
    <form action="/posts/newPost" enctype="multipart/form-data" method="POST">
      <label for="imgUpload" class="form-label">Image</label>
      <input type="file" class="form-control" id="imageUpload" name="file" />
      <label class="my-2 "for="caption">Caption</label>
      <textarea
        class="form-control"
        name="desc"
        id="caption"
        maxlength="160"
      ></textarea>

      
      <button id="submit-btn" class="btn btn-primary mt-2" type="submit">Submit</button>
    </form>
  </div>
</div>

<%- include('partials/footer') -%>
